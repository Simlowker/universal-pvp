{
  "name": "@magicblock-pvp/root",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=@magicblock-pvp/web",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects SDK Server UI Config",
    "test:integration": "jest --selectProjects Server --testNamePattern=\"integration\"",
    "test:e2e": "playwright test",
    "test:e2e:setup": "playwright test setup",
    "test:e2e:ui": "playwright test --ui",
    "test:load": "k6 run tests/load/k6-load-test.js",
    "test:contracts": "cd apps/contracts && anchor test",
    "test:smoke": "playwright test --grep=\"@smoke\"",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:contracts && npm run test:e2e",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "benchmark": "tsx scripts/benchmark-latency.ts",
    "measure-costs": "tsx scripts/measure-costs.ts",
    "db:migrate": "turbo db:migrate",
    "db:migrate:deploy": "turbo db:migrate:deploy",
    "db:seed": "turbo db:seed",
    "deploy:staging": "./scripts/deploy/staging-deploy.sh",
    "deploy:production": "./scripts/deploy/production-deploy.sh",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "monitor:setup": "node scripts/monitoring/setup-monitors.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "security:audit": "npm audit && snyk test",
    "postinstall": "echo 'Installation complete'"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit && npm run type-check"
    }
  }
}