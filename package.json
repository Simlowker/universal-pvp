{
  "name": "universal-pvp",
  "version": "1.0.0",
  "private": true,
  "description": "Universal PVP - Strategic Duel Game with MagicBlock Integration",
  "main": "src/backend/server.js",
  "scripts": {
    "dev": "cd apps/web && npm run dev",
    "build": "cd apps/web && npm install && npm run build",
    "start": "cd apps/web && npm run start",
    "postinstall": "cd apps/web && npm install",
    "lint": "cd apps/web && npm run lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:bolt": "jest tests/bolt/combat.test.ts",
    "test:bolt:rust": "cargo test --manifest-path src/bolt/Cargo.toml",
    "test:er": "node scripts/test-er.js",
    "test:er:latency": "jest tests/er/latency.test.ts",
    "test:pvp-flow": "jest tests/integration/pvp-flow.test.ts",
    "test:stress": "jest tests/performance/stress.test.ts --testTimeout=300000",
    "test:all": "npm run test:bolt && npm run test:er:latency && npm run test:pvp-flow",
    "test:security": "jest tests/security/ --testTimeout=60000",
    "test:magicblock": "jest tests/integration/magicblock/ --testTimeout=30000",
    "test:costs": "npx ts-node tests/costs/measure-costs.ts",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --ui --config=tests/e2e/playwright.config.ts",
    "test:k6": "k6 run tests/performance/k6-load-test.js",
    "benchmark": "node scripts/benchmark.js",
    "benchmark:full": "DETAILED=true CHARTS=true node scripts/benchmark.js",
    "benchmark:comprehensive": "bash scripts/benchmarks/run-benchmarks.sh",
    "server": "node src/backend/server.js",
    "server:dev": "nodemon src/backend/server.js",
    "server:test": "NODE_ENV=test node src/backend/server.js",
    "db:migrate": "node src/backend/database/migrations/migrate.js",
    "db:seed": "node src/backend/database/seed.js",
    "monitoring:start": "docker-compose -f config/monitoring/docker-compose.monitoring.yml up -d",
    "monitoring:stop": "docker-compose -f config/monitoring/docker-compose.monitoring.yml down",
    "monitoring:logs": "docker-compose -f config/monitoring/docker-compose.monitoring.yml logs -f",
    "cost:monitor": "npx ts-node scripts/monitoring/cost-monitor.ts",
    "cost:daily": "npx ts-node scripts/monitoring/cost-monitor.ts daily",
    "cost:export": "npx ts-node scripts/monitoring/cost-monitor.ts export prometheus",
    "security:scan": "npm run test:security",
    "performance:profile": "node --inspect src/backend/server.js",
    "deploy:staging": "npm run build && npm run test:all && echo 'Ready for staging deployment'",
    "deploy:production": "npm run build && npm run test:comprehensive && echo 'Ready for production deployment'",
    "test:comprehensive": "npm run test:all && npm run test:security && npm run test:magicblock && npm run test:costs",
    "health:check": "curl -f http://localhost:5000/health || exit 1",
    "logs:backend": "tail -f logs/backend.log",
    "logs:frontend": "tail -f .next/server.log",
    "clean": "rm -rf .next dist build coverage test-results benchmark-results",
    "postinstall": "playwright install"
  },
  "dependencies": {
    "@magicblock-labs/bolt-sdk": "^0.2.4",
    "@magicblock-labs/ephemeral-rollups-sdk": "^0.2.8",
    "@magicblock-labs/gum-react-sdk": "^3.0.8",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-phantom": "^0.9.28",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-solflare": "^0.6.32",
    "@solana/wallet-adapter-wallets": "^0.19.37",
    "@solana/web3.js": "^1.87.6",
    "@switchboard-xyz/solana.js": "^0.29.82",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.542.0",
    "magic-router-sdk": "^1.0.10",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "typescript": "^5.3.3",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-winston": "^4.2.0",
    "winston": "^3.11.0",
    "prom-client": "^15.0.0",
    "response-time": "^2.3.2",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.10.7",
    "@playwright/test": "^1.40.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemailer": "^6.9.7",
    "@types/nodemailer": "^6.4.14",
    "pino-pretty": "^13.1.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "blockchain",
    "gaming",
    "solana",
    "magicblock",
    "pvp",
    "strategic-duel",
    "web3",
    "ephemeral-rollups"
  ],
  "author": "Universal PVP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/universal-pvp/strategic-duel"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.{js,ts}",
      "<rootDir>/src/**/*.test.{js,ts}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/",
      "<rootDir>/tests/e2e/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts,jsx,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.test.{js,ts}",
      "!src/**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}