# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=sol_duel

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration (CRITICAL: Use strong secrets in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=REPLACE_WITH_STRONG_RANDOM_SECRET_64_CHARS_MINIMUM
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_STRONG_RANDOM_SECRET_64_CHARS_MINIMUM

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
PROGRAM_ID=YourProgramPublicKeyHere
TREASURY_WALLET=YourTreasuryWalletPublicKeyHere
PLATFORM_FEE=0.05

# API Configuration
INTERNAL_API_KEY=your-internal-api-key
ALLOWED_ORIGINS=http://localhost:3000,https://solduel.app

# Logging Configuration
LOG_LEVEL=info
LOG_QUERIES=false

# Application Configuration
APP_VERSION=1.0.0

# Rate Limiting
MAX_REQUESTS_PER_WINDOW=100
WINDOW_MS=900000

# Game Configuration
DEFAULT_GAME_TIME_LIMIT=300
MIN_WAGER_AMOUNT=0.01
MAX_WAGER_AMOUNT=100

# Matchmaking Configuration
ELO_K_FACTOR=32
MATCHMAKING_QUEUE_TTL=600

# Tournament Configuration
MIN_TOURNAMENT_PARTICIPANTS=4
MAX_TOURNAMENT_PARTICIPANTS=64