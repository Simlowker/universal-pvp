  "screenshots": [
    {
      "src": "/screenshots/mobile-home.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "wide",
      "label": "Mobile Home Screen"
    },
    {
      "src": "/screenshots/mobile-battle.png",
      "sizes": "390x844",
      "type": "image/png",
