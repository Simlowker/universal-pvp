{
  "name": "Universal PVP - Mobile Gaming Arena",
  "short_name": "Universal PVP",
  "description": "Cross-platform mobile gaming experience with Solana blockchain integration",
  "version": "1.0.0",
  "start_url": "/",
  "display": "fullscreen",
  "orientation": "portrait-primary",
  "theme_color": "#0ea5e9",
  "background_color": "#0a0a0b",
  "lang": "en",
  "scope": "/",
  "categories": ["games", "entertainment", "finance"],
  "dir": "ltr",
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Quick Battle",
      "short_name": "Battle",
      "description": "Jump into a quick PvP battle",
      "url": "/battle?mode=quick",
      "icons": [
        {
          "src": "/icons/battle-shortcut.png",
          "sizes": "192x192",
          "type": "image/png",
          "purpose": "any"
        }
      ]
    },
    {
      "name": "Tournaments",
      "short_name": "Tournament",
      "description": "Browse active tournaments",
      "url": "/tournaments",
      "icons": [
        {
          "src": "/icons/tournament-shortcut.png",
          "sizes": "192x192",
          "type": "image/png",
          "purpose": "any"
        }
      ]
    },
    {
      "name": "Wallet",
      "short_name": "Wallet",
      "description": "Manage your SOL and rewards",
      "url": "/wallet",
      "icons": [
        {
          "src": "/icons/wallet-shortcut.png",
          "sizes": "192x192",
          "type": "image/png",
          "purpose": "any"
        }
      ]
    }
  ],
