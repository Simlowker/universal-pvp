      "src": "/screenshots/mobile-wallet.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "wide",
      "label": "Mobile Wallet Interface"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "protocol_handlers": [
    {
      "protocol": "web+solana",
      "url": "/solana?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import-character",
      "accept": {
        "application/json": [".json"]
      },
      "icons": [
        {
          "src": "/icons/character-import.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "display_override": ["window-controls-overlay", "fullscreen", "standalone"],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.universalpvp.mobile",
      "id": "com.universalpvp.mobile"
    },
    {
      "platform": "itunes",
